<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/white"/>
            <size
                android:height="8dp"
                android:width="8dp"/>
            <stroke
                android:width="0.5dp"/>

        </shape>

    </item>

    <item
        android:drawable="@drawable/light_mode"
        android:height="6dp"
        android:width="6dp"
        android:top="4dp"
        android:bottom="4dp"
        android:right="4dp"
        android:left="4dp">

    </item>

</layer-list>