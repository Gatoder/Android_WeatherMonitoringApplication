<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/white"/>
            <size
                android:height="20dp"
                android:width="20dp"/>
            <stroke
                android:width="0.5dp"/>

        </shape>

    </item>

    <item
        android:drawable="@drawable/night_mode"
        android:height="10dp"
        android:width="10dp"
        android:top="10dp"
        android:bottom="10dp"
        android:right="10dp"
        android:left="10dp">

    </item>

</layer-list>